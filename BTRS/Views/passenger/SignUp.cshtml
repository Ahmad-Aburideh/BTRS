@model BTRS.Models.passenger
<form method="post">

	<table>
		<tr>
			<td> @Html.LabelFor(m=>m.PassengerID) </td> <td> @Html.TextBoxFor(m=>m.PassengerID,new { @type = "number", @required = "required" })</td>
		</tr>

		<tr>
			<td> @Html.LabelFor(m=>m.Name) </td> <td> @Html.TextBoxFor(m=>m.Name,new { @required = "required" })</td>
		</tr>
		
		<tr>
			<td> @Html.LabelFor(m=>m.EmailAddress) </td> <td> @Html.TextBoxFor(m=>m.EmailAddress,new { @required = "required" })</td>
		</tr>

		<tr>
			<td> @Html.LabelFor(m=>m.PhoneNumber) </td> <td> @Html.TextBoxFor(m=>m.PhoneNumber,new {  @type = "number",@required = "required" })</td>
		</tr>

		<tr>
			<td> @Html.LabelFor(m=>m.Password) </td> <td> @Html.PasswordFor(m=>m.Password,new { @required = "required" })</td>
		</tr>


		<tr>
			<td> @Html.LabelFor(m=>m.Username) </td> <td> @Html.TextBoxFor(m=>m.Username,new { @required = "required" })</td>
		</tr>

		<tr>
			<td> @Html.LabelFor(m => m.Gender) </td>
			<td>
				@Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
					{
						new SelectListItem { Text = "Male", Value = "Male" },
                        new SelectListItem { Text = "Female", Value = "Female" }
                    }, "Select Gender",new { @required = "required" })
            </td>
		</tr>


		<div class="form-group">
                <input type="submit" value="Signup" class="btn btn-primary" />
        </div>
	</table>

	@Html.Raw(TempData["Msg"])

</Form>