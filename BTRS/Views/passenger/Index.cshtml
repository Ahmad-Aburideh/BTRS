@model IEnumerable<BTRS.Models.passenger>

@{
    ViewData["Title"] = "Index";
}
<style>

    
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: cadetblue;
        }

        .table a {
            color: #007bff; /* Link color */
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;
            }

</style>
<style>


    .table a.details-link,
    .table a.delete-link {
        display: inline-block;
        padding: 6px 12px;
        margin-right: 5px;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .table a.details-link {
        background-color: cadetblue; 
    }

    .table a.delete-link {
        background-color: red; 
    }

        .table a.details-link:hover,
        .table a.delete-link:hover {
            background-color: cadetblue; 
        }

</style>
<h1>Passenger</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PassengerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PassengerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PassengerID" class="details-link">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PassengerID" class="delete-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
