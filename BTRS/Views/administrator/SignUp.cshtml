@model BTRS.Models.administrator
<style>
        /* Style for the form */
        form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f4f4f4;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Style for the table */
        table {
            width: 100%;
        }

        /* Style for table cells */
        td {
            padding: 10px;
        }

        /* Style for labels */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Style for textboxes and password inputs */
        input[type="text"],
        input[type="password"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        /* Style for the submit button */
        input[type="submit"] {
            background-color: #ff0000;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            /* Style for the submit button on hover */
            input[type="submit"]:hover {
                background-color: #ff0000;
            }
    </style>
<form method="post">

	<table>
		<tr>
			<td> @Html.LabelFor(m=>m.AdminID) </td> <td> @Html.TextBoxFor(m=>m.AdminID , new {  @type = "number",@required = "required" })</td>
		</tr>

		<tr>
			<td> @Html.LabelFor(m=>m.Username) </td> <td> @Html.TextBoxFor(m=>m.Username,new { @required = "required" })</td>
		</tr>
		
		<tr>
			<td> @Html.LabelFor(m=>m.Password) </td> <td> @Html.PasswordFor(m=>m.Password,new { @required = "required" })</td>
		</tr>
		
		<tr>
			<td> @Html.LabelFor(m=>m.FullName) </td> <td> @Html.TextBoxFor(m=>m.FullName,new { @required = "required" })</td>
		</tr>

	

		
	</table>
    <div class="form-group">
                <input type="submit" value="Signup" class="btn btn-primary" />
        </div>
	@TempData["Msg"]

</Form>