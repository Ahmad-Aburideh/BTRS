@model BTRS.Models.trip

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: #007bff; 

    h4 {
        color: #007bff; 
    }

    hr {
        border-color: #007bff; 

    .row {
        margin-top: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #333; 
    }

    .col-sm-10 {
        margin-bottom: 15px;
    }

    .form-group {
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff; 
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0056b3; 
        }
</style>

<h2>Book Your Trip</h2>

<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>

       

    </dl>

    <div class="form-group">
        <a asp-action="Book" asp-controller="PassengerTrips" class="btn btn-primary">Confirm Booking</a>
    </div>
</div>
