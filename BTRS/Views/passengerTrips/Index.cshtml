@model IEnumerable<BTRS.Models.trip>

@{
    ViewData["Title"] = "Index";
}

<h1>Passenger Trips</h1>
<style>


    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: darkblue;
            color:white;
        }

        .table a {
            color: #007bff; 
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;

            }

</style>
<style>


    .table a.details-link,
    .table a.book-link {
        display: inline-block;
        padding: 6px 12px;
        margin-right: 5px;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .table a.details-link {
        background-color: darkblue;
    }

    .table a.book-link {
        background-color: green;
    }

        .table a.details-link:hover
         {
        background-color: darkblue;
        }

    a.logout-link {
        background-color: #ff0000; 
        color: white;
        padding: 6px 12px;
        margin-right: 5px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TripID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modeItem => item.TripID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusNumber)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.TripID" class="details-link">Details</a> |
                <a asp-action="Book" asp-route-id="@item.TripID" class="book-link">Book</a> 
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="LogOut" class="logout-link">Logout</a>
@Html.Raw(TempData["Message"])


